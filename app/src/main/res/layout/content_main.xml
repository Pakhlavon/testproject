<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >


    <LinearLayout
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="42dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/imgv"
            android:layout_width="350sp"
            android:layout_height="350sp"></android.support.v4.view.ViewPager>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#4bae4f"
        >

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bog`lanish"
            android:textColor="#ccdb38"
            android:textSize="22sp"
            android:layout_marginTop="10sp"
            android:layout_marginStart="20sp"
            />

        <ImageButton
            android:id="@+id/ibtntg"
            android:layout_width="42dp"
            android:layout_height="38dp"
            android:layout_marginStart="105sp"
            android:layout_marginTop="0sp"
            android:background="#ccdb38"
            android:onClick="btntg"
            app:srcCompat="@mipmap/ic_tg" />

        <ImageButton
            android:id="@+id/ibtntel"
            android:layout_width="42sp"
            android:layout_height="38sp"
            android:layout_marginStart="20sp"
            android:layout_marginTop="0sp"
            android:background="#ccdb38"
            android:layout_marginEnd="84dp"
            android:onClick="btntel"
            app:srcCompat="@mipmap/ic_call"
            />




    </LinearLayout>


</RelativeLayout>